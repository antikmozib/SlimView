<GridPane hgap="4.0" vgap="8.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.mozib.slimview.ResizeWindowController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fillHeight="false" />
        <RowConstraints fillHeight="false" />
        <RowConstraints fillHeight="false" />
        <RowConstraints fillHeight="false" valignment="BOTTOM" vgrow="ALWAYS" />
        <RowConstraints fillHeight="false" />
    </rowConstraints>
    <children>
        <Label mnemonicParsing="true" text="_Width:" />
        <TextField id="textWidth" fx:id="textWidth" GridPane.columnIndex="1" />
        <Label text="pixels" GridPane.columnIndex="2" />

        <Label mnemonicParsing="true" text="_Height:" GridPane.rowIndex="1" />
        <TextField id="textHeight" fx:id="textHeight" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="pixels" GridPane.columnIndex="2" GridPane.rowIndex="1" />

        <CheckBox fx:id="checkBoxPreserveAspectRatio" selected="true" text="_Preserve aspect ratio" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="2" />

        <Separator GridPane.columnSpan="2147483647" GridPane.rowIndex="3" />

        <HBox alignment="BOTTOM_RIGHT" spacing="8.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="4" GridPane.rowSpan="2147483647" GridPane.valignment="BOTTOM">
            <children>
                <Button fx:id="buttonOK" defaultButton="true" mnemonicParsing="false" onAction="#buttonOK_onAction" prefWidth="80.0" text="OK" />
                <Button fx:id="buttonCancel" cancelButton="true" mnemonicParsing="false" onAction="#buttonCancel_onAction" prefWidth="80.0" text="Cancel" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
