<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.mozib.slimview.AboutWindowController">
    <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="8.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
         <children>
              <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../icons/slimview.png" />
                  </image>
              </ImageView>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                    <Label text="SlimView" />
                    <Label fx:id="labelVersion" text="Version 1.0" />
                    <Separator prefHeight="16.0" prefWidth="897.0">
                     <padding>
                        <Insets bottom="8.0" top="8.0" />
                     </padding></Separator>
                    <Label text="Copyright Â© 2021 Antik Mozib. All Rights Reserved." />
                    <HBox alignment="CENTER_LEFT">
                        <children>
                            <Label text="Website:" />
                            <Hyperlink fx:id="hyperlinkWebsite" focusTraversable="false" onAction="#hyperlinkWebsite_onAction" text="https://mozib.io/slimview" />
                        </children>
                    </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="8.0" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="8.0">
         <children>
            <Button fx:id="buttonAcknowledgements" minWidth="80.0" onAction="#buttonAcknowledgements_onAction" text="_Acknowledgements" />
              <Button fx:id="buttonOK" cancelButton="true" defaultButton="true" minWidth="80.0" mnemonicParsing="false" onAction="#buttonOK_onAction" text="OK" />
         </children>
      </HBox>
    </children>
</AnchorPane>
